doctype html
// views/profile.ejs
html
  head
    title Node Authentication
    |     
    link(rel='stylesheet', href='//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css')
    |     
    link(rel='stylesheet', href='//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css')
    |     
    style.
      body        { padding-top:80px; word-wrap:break-word; }
  body
    .container
      .page-header.text-center
        h1
          span.fa.fa-anchor
          |  Profile Page
        |         
        a.btn.btn-default.btn-sm(href='/logout') Logout
      |     
      .row
        // LOCAL INFORMATION
        .col-sm-6
          .well
            h3
              span.fa.fa-user
            if(user.local.email)
              p
                strong id
                  | : #{user.local._id}
                  br
                strong email
                  | : #{user.local.email}
                  br
                strong password
                  | : #{user.local.password}
                  br
                |                     
                |                     
                a.btn.btn-default(href='/unlink/local') Unlink
            else
              a.btn.btn-default(href='/connect/local') Connect Local
              |  Local
        // FACEBOOK INFORMATION
        .col-sm-6
          .well
            h3.text-primary
              span.fa.fa-facebook
            if(user.facebook.token)
              p
                strong id
                  | : #{user.facebook.id}
                  br
                strong token
                  | : #{user.facebook.token}
                  br
                strong email
                  | : #{user.facebook.email}
                  br
                strong name
                  | : #{user.facebook.name}
                  br
                |                     
                |                     
                a.btn.btn-primary(href='/unlink/facebook') Unlink
            else
              a.btn.btn-primary(href='/connect/facebook') Connect Facebook
              |  Facebook
            // check if the user has this token (is the user authenticated with this social account)
      |     
      .row
        // TWITTER INFORMATION
        .col-sm-6
          .well
            h3.text-info
              span.fa.fa-twitter
            if(user.twitter.token)
              p
                strong id
                  | : #{user.twitter.id}
                  br
                strong token
                  | : #{user.twitter.token}
                  br
                strong display name
                  | : #{user.twitter.displayName}
                  br
                strong username
                  | : #{user.twitter.username}
                  br
                |                     
                |                     
                a.btn.btn-info(href='/unlink/twitter') Unlink
            else
              a.btn.btn-info(href='/connect/twitter') Connect Twitter
              |  Twitter
            // check if the user has this token (is the user authenticated with this social account)
        // GOOGLE INFORMATION
        .col-sm-6
          .well
            h3.text-danger
              span.fa.fa-google-plus
            if(user.google.token)
              p
                strong id
                  | : #{user.google.id}
                  br
                strong token
                  | : #{user.google.token}
                  br
                strong email
                  | : #{user.google.email}
                  br
                strong name
                  | : #{user.google.name}
                  br
                |                     
                |                     
                a.btn.btn-danger(href='/unlink/google') Unlink
            else
              a.btn.btn-danger(href='/connect/google') Connect Google
              |  Google+
            // check if the user has this token (is the user authenticated with this social account)
      if(user.permissions.sitewide == "GOD")
        .row
        // TWITTER INFORMATION
        .col-sm-12
          .well
            h3.text-info
              span.glyphicon.glyphicon-cog
            if(user.twitter.token)
              p